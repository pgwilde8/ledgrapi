# LedgrAPI Environment Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME=LedgrAPI
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://ledgrapi_user:your_password@localhost/ledgrapi_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://ledgrapi.com,https://www.ledgrapi.com

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,ledgrapi.com,www.ledgrapi.com

# Blockchain Configuration
# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_CHAIN_ID=1

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# XDC Network
XDC_RPC_URL=https://erpc.xinfin.network
XDC_CHAIN_ID=50

# XRPL
XRPL_RPC_URL=https://xrplcluster.com

# Quant Network (placeholder for future integration)
QUANT_RPC_URL=
QUANT_API_KEY=

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
COINBASE_COMMERCE_API_KEY=your_coinbase_api_key

# USDC Contract Addresses
USDC_CONTRACT_ADDRESS_ETH=0xA0b86a33E6441b8c4C8C8C8C8C8C8C8C8C8C8C8C
USDC_CONTRACT_ADDRESS_POLYGON=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# QNT Contract Address
QNT_CONTRACT_ADDRESS=0x4a220e6096b25eadb88358cb44068a3248254675

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Monitoring
SENTRY_DSN= 